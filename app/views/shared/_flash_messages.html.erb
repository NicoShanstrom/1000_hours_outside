<!-- app/views/shared/_flash_messages.html.erb -->
<% if flash.any? %>
  <div class="flash-container">
    <% flash.each do |type, message| %>
      <div
        class="<%= flash_class_for(type) %> flash-message"
        role="alert"
        data-controller="flash"
      >
        <%= message %>
      </div>
    <% end %>
  </div>
<% end %>
