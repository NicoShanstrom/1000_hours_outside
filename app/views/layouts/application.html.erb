<!DOCTYPE html>
<html>
<head>
  <title>1000 Hours Outside Challenge</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag 'application', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'application', type: 'module', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'turbo', type: 'module' %>
</head>
<body>
  <div class="container mt-4">
    <% if user_signed_in? %>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, id: "logout-link", class: 'btn btn-orange' %>
      </div>
    <% end %>

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
        <%= value %>
      </div>
    <% end %>

    <%= yield %>
  </div>
</body>
</html>
