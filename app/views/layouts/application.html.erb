<!DOCTYPE html>
<html>
<head>
  <title>1000 Hours Outside Challenge</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Importmap must be loaded before any module scripts -->
  <%= javascript_importmap_tags %>

  <!-- Stylesheets -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  <script>
    console.log("Inline JavaScript is working");
    console.log("JavaScript is working on iOS");
    document.body.style.backgroundColor = "yellow";
  </script>
  
</head>
<body>
  <div class="container mt-4">
    <% if user_signed_in? %>
      <div class="d-flex justify-content-between align-items-center mb-4">
        <%= link_to 'Logout', destroy_user_session_path, data: { turbo_method: :delete }, id: "logout-link", class: 'btn btn-orange' %>
        <p>Current Time Zone: <%= current_user.time_zone || "Not set" %></p>
      </div>
    <% end %>
    <%= render 'shared/flash_messages' %>
    <%= yield %>
  </div>
</body>
</html>
